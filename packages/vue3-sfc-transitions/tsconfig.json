{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "strict": false,
    "declaration": true,
    "sourceMap": true,
    "lib": [ "ESNext", "DOM"],
    "jsx": "preserve",
    "outDir": "dist",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "types": ["vitest/globals"]
  },
  "exclude": ["node_modules", "dist", "**/*.js"],
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "tests/unit/**/*.spec.ts"
  ],
}
