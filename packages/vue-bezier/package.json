{
  "name": "@noction/vue-bezier",
  "type": "module",
  "version": "2.0.3",
  "packageManager": "pnpm@10.7.1",
  "description": "A Vue 3 component library with customizable CSS-based transition components featuring Bezier timing functions. Includes fade, dissolve, blur, scale, slide, push, wipe, rotate, zoom, and clip-path transitions.",
  "author": {
    "name": "50rayn",
    "email": "soryngitlan@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://noction.github.io/vue-bezier/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Noction/vue-bezier.git"
  },
  "bugs": {
    "url": "https://github.com/Noction/vue-bezier/issues",
    "email": "soryngitlan@gmail.com"
  },
  "keywords": [
    "vue",
    "vue3",
    "transitions",
    "animations",
    "bezier",
    "fade",
    "dissolve",
    "blur",
    "scale",
    "slide",
    "push",
    "wipe",
    "rotate",
    "zoom",
    "clip-path",
    "transition-group",
    "list-transitions",
    "sfc",
    "composition-api",
    "css-transitions",
    "vue-transitions",
    "vue-components"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/types/main.d.ts",
      "import": "./dist/vue-bezier.js"
    },
    "./*": "./*",
    "./types": "./dist/types/main.d.ts",
    "./styles": "./dist/vue-bezier.css"
  },
  "main": "dist/vue-bezier.js",
  "module": "dist/vue-bezier.js",
  "types": "dist/types/main.d.ts",
  "files": [
    "README.md",
    "dist"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development vite build --watch",
    "build:light": "cross-env NODE_ENV=development vite build",
    "prebuild": "vue-tsc -p tsconfig.build.json && cp ../../README.md .",
    "build": "vite build",
    "postbuild": "vue-docgen-web-types",
    "prepublishOnly": "npm run build",
    "lint:es": "eslint \"src/**/*.{js,ts,vue}\" --fix --color",
    "lint:style": "stylelint src/**/*.{css,scss,vue} --color --fix",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "type:check": "vue-tsc --noEmit"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "catalog:",
    "@vitejs/plugin-vue": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vue/test-utils": "catalog:",
    "cross-env": "catalog:",
    "jsdom": "catalog:",
    "minimist": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "vue": "catalog:",
    "vue-docgen-web-types": "catalog:",
    "vue-tsc": "catalog:"
  },
  "web-types": "./dist/web-types.json"
}
