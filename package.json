{
  "name": "root",
  "version": "2.0.0-beta.1",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "predev": "pnpm run build:light",
    "dev": "pnpm run -r --parallel dev",
    "build": "pnpm -r build",
    "build:light": "pnpm -F=vue-bezier run build:light",
    "lint": "pnpm --parallel -w \"/^lint:.*/\"",
    "lint:es": "eslint .",
    "lint:es:fix": "eslint . --fix",
    "lint:style": "pnpm -r --parallel --no-bail lint:style",
    "test": "pnpm -r --parallel test",
    "test:coverage": "pnpm -r --parallel run test:coverage",
    "release": "pnpm run lint && bumpp package.json packages/demo/package.json packages/vue-bezier/package.json --commit --push --tag"
  },
  "dependencies": {
    "bumpp": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@stylistic/stylelint-plugin": "catalog:",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "postcss": "catalog:",
    "postcss-html": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "stylelint": "catalog:",
    "stylelint-config-recess-order": "catalog:",
    "stylelint-config-recommended-vue": "catalog:",
    "stylelint-config-standard": "catalog:",
    "stylelint-order": "catalog:",
    "typescript": "catalog:"
  }
}
